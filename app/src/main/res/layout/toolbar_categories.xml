<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/colorPrimaryDark"
        android:elevation="8dp"
        tools:context=".ui.AppActivity">

    <ImageView
            android:id="@+id/toolbar_icon"
            style="@style/icon"
            android:src="@drawable/ic_healthy_food"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <com.phooper.goodlooker.ui.widgets.DynamicWidthSpinner
            android:id="@+id/drop_down_menu"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:backgroundTint="@color/white"
            app:layout_constraintBottom_toBottomOf="@id/toolbar_icon"
            app:layout_constraintStart_toEndOf="@id/toolbar_icon"
            app:layout_constraintTop_toTopOf="@id/toolbar_icon"

            />

    <ImageView
            android:id="@+id/search_btn"
            style="@style/icon"
            android:src="@drawable/ic_search"
            app:layout_constraintBottom_toBottomOf="@id/toolbar_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/toolbar_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>