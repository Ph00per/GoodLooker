<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/goodlooker_background</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="full_width_img">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:layout_marginTop">@dimen/margin_padding_size_medium</item>
        <item name="android:layout_marginBottom">@dimen/margin_padding_size_medium</item>
        <item name="android:scaleType">centerCrop</item>
    </style>


    <style name="progress_bar">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:visibility">visible</item>
    </style>


    <style name="toolbar_icon">
        <item name="android:minHeight">@dimen/toolbar_icon_size</item>
        <item name="android:minWidth">@dimen/toolbar_icon_size</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:padding">@dimen/tool_bar_icon_padding</item>
    </style>

    <style name="toolbar_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="h1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/margin_padding_size_medium</item>
        <item name="android:layout_marginStart">@dimen/margin_padding_size_medium</item>
        <item name="android:layout_marginBottom">@dimen/margin_padding_size_medium</item>
        <item name="android:layout_marginTop">@dimen/margin_padding_size_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:lineHeight">@dimen/line_height_size</item>
    </style>

    <style name="h2" parent="h1">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:layout_marginBottom">@dimen/margin_padding_size_small</item>
        <item name="android:layout_marginTop">@dimen/margin_padding_size_small</item>
    </style>

    <style name="h3" parent="h2">
        <!--        <item name="android:textSize">20sp</item>-->
        <!--        <item name="android:layout_marginBottom">8dp</item>-->
        <!--        <item name="android:layout_marginTop">8dp</item>-->
    </style>

    <style name="p" parent="h3">
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:layout_marginBottom">@dimen/margin_padding_size_xsmall</item>
        <item name="android:layout_marginTop">@dimen/margin_padding_size_xsmall</item>
    </style>

    <style name="li" parent="p">
        <item name="android:layout_marginStart">@dimen/margin_padding_size_small</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="icon_meta" parent="toolbar_icon">
        <item name="android:layout_height">@dimen/toolbar_icon_size</item>
        <item name="android:layout_width">@dimen/toolbar_icon_size</item>
        <item name="android:padding">2dp</item>
        <item name="android:layout_margin">@dimen/margin_padding_size_medium</item>

    </style>

    <style name="text_meta">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:layout_marginEnd">@dimen/margin_padding_size_xsmall</item>
        <item name="android:layout_marginStart">@dimen/margin_padding_size_xsmall</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="edit_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
        <item name="android:backgroundTint">@color/transparent</item>
        <item name="android:paddingStart">@dimen/margin_padding_size_small</item>
        <item name="android:paddingEnd">@dimen/margin_padding_size_small</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
    </style>

    <style name="divider">
        <item name="android:layout_marginBottom">@dimen/margin_padding_size_small</item>
        <item name="android:layout_marginTop">@dimen/margin_padding_size_small</item>
        <item name="android:layout_height">0.59dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="drawer_item" parent="p">
        <item name="android:layout_margin">0dp</item>
        <item name="android:background">@drawable/drawer_item_background</item>
        <item name="android:clickable">true</item>
        <item name="android:drawablePadding">@dimen/margin_padding_size_medium</item>
        <item name="android:focusable">true</item>
        <item name="android:padding">@dimen/margin_padding_size_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="toast">
        <item name="stFont">@font/roboto_regular</item>
        <item name="stTextColor">@color/white</item>
        <item name="stTextSize">@dimen/text_size_medium</item>
        <item name="stColorBackground">@color/colorPrimaryDark</item>
        <item name="stSolidBackground">true</item>
        <item name="stStrokeWidth">1dp</item>
        <item name="stStrokeColor">@color/colorAccent</item>
        <item name="stLength">SHORT</item>
        <item name="stRadius">25dp</item>
    </style>
</resources>
